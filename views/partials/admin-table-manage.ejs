<% if(act.length > 0) { %>
  <% var l=act.length; %>
  <b>Tìm thấy <%- l %> hoạt động điểm danh phù hợp</b>
  <div class="table-responsive">
    <table class="table text-center table-bordered table-hover">
      <thead>
        <tr class="d-flex">
          <th class="col-1">STT</th>
          <th class="col-2">Tên hoạt động</th>
          <th class="col-1">Tham dự</th>
          <th class="col-2">Điểm danh</th>
          <th class="col-2"> Hết hạn</th>
          <th class="col-4" colspan="4">Thao tác</th>
        </tr>
      </thead>
      <tbody>
         
        <% for(var i=0;i<l;i++){ %>
        <tr class="d-flex ">
          <% var studentJoin=0 %>
          <% for(var j=0;j<listStudent.length;j++){ %>
            <% if(act[i].TenSuKien ==listStudent[j].TenSuKien) { %>
              <% studentJoin +=1 %>
              <% } %>
            <% } %>
          <th class="col-1"><%- i+1 %> </th>
          <th class="col-2"><%- act[i].TenSuKien %></th>
          <th class="col-1"><%- studentJoin  %></th>
          <% var studentDiemDanh=0 %>
          <% for(var h=0;h<listStudentDiemDanh.length;h++){ %>
            <% if(act[i].IDHoatDong ==listStudentDiemDanh[h].IDHoatDong) { %>
              <% studentDiemDanh +=1 %>
              <% } %>
            <% } %>
          <th class="col-2"><%- studentDiemDanh %> / <%-studentJoin  %></th>
              
  
          <th class="col-2"><%-act[i].ThoiGian.getHours() %>:<%-act[i].ThoiGian.getMinutes() %>  <%-act[i].ThoiGian.getDate() %>-<%-act[i].ThoiGian.getMonth() + 1 %>-<%-act[i].ThoiGian.getFullYear() %>  </th>
          <th class="col-1"><i class="fas fa-lg fa-file-download text-primary " data-toggle="modal" data-target="#dlFile" onclick="AJAX_dlFileExcel('<%- act[i].IDHoatDong %>')"></i></th>
          <th class="col-1"><i class="fas fa-lg fa-edit text-success" data-toggle="modal" data-target="#editActModal" onclick="AJAX_editActModal('<%- act[i].IDHoatDong %>')"></i></th>
          <th class="col-1"><i class="fas fa-lg fa-trash-alt  text-danger" data-toggle="modal" data-target="#delActModal" onclick="authenticateDelAct('<%- act[i].IDHoatDong %>')"></i></th>
          <th class="col-1"> <i class="fas fa-eye fa-lg  text-info"  data-toggle="modal" data-target="#refresh" onclick="RefreshAc('<%- act[i].IDHoatDong %>')"></i></th>
        </tr>
        <% } %>
        
      </tbody>
    </table>
  </div>
  <% } else { %>
  <b>Bạn chưa có hoạt động nào!</b><br>
  <% } %>